{
	"compileOnSave": true,
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "out",
		"rootDir": "",
		"sourceMap": true,
		"strict": true,
		"target": "es2020",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"exclude": ["**/*.spec.ts"],
	"include": ["**/*"]
}
